extends layout

block content
  script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.min.js")
  script(src="/javascripts/main.js")
  div(id="main", style="width:1000px; margin:0 auto; text-align: center")
    h1 #{title}
    div(id="div_form")
      <span class="label_new">ID</span>
      input(id='txtId' type='text' readonly="true" class="input_new" value=id)
      <br /><br />
      <span class="label_new">Kanji</span>
      input(id='txtKanji' type='text' class="input_new" value=kanji)
      <br /><br />
      <span class="label_new">Hiragana</span>
      input(id='txtHiragana' type='text' class="input_new" value=hiragana)
      <br /><br />
      <span class="label_new">Meaning</span>
      input(id='txtMeaning' type='text' class="input_new" value=vn)
      <br /><br />
      <span class="label_new label_ex">Example</span>
      textarea(id='txtExample' type='text' class="input_new" cols="10" rows="5")=ex
      <br /><br />
      button(id="btnEditBack" style="height: 50px; width: 100px; font-size: 20px;") Back
      <span style='display:inline-block; width: 100px;'></span>
      button(id="btnUpdate" style="height: 50px; width: 100px; font-size: 20px;") Update
    div(id="div_status")
      <br />
      <br />
      <br />
      <br />
      <span id="lblStatus" style="display: inline-block; font-size: 20px; height: 100px;"></span>